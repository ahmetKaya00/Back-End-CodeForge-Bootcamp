@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card card-body my-2">
    <form asp-action="Index" method="get">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <select name="category" asp-items="ViewBag.Categories" class="form-select">
                        <option value="0">Hepsi</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                </div>
            </div>
        </div>
    </form>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 100px;">@Html.DisplayNameFor(m=>m.ProductId)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(m=>m.Image)</th>
            <th>@Html.DisplayNameFor(m=>m.BookName)</th>
            <th style="width: 100px;">@Html.DisplayNameFor(m=>m.PageCount)</th>
            <th style="width: 160px;">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in @Model){
            <tr>
                <td>@book.ProductId</td>
                <td><img src="~/img/@book.Image" class="img-fluid" alt=""></td>
                <td>@book.BookName</td>
                <td>@book.PageCount</td>
                <td>
                    <a href="" class="btn btn-primary">Edit</a>
                    <a href="" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
