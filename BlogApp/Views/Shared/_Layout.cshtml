<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/boostrap-icons/font/bootstrap-icons.min.css">

    <title>Document</title>
</head>
<nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
        <a asp-controller="posts" asp-action="Index" class="navbar-brand">
            <i class="bi bi-card-text"></i> BlogApp
        </a>

        <ul class="navbar-nav ms-auto">
            @if(User.Identity!.IsAuthenticated){
                <li class="nav-item">
                <a href="#" class="nav-link">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                    <a href="/user/loguot" class="nav-link">Logout</a>
                </li>
            }
            else{
                <li class="nav-item">
                    <a href="/user/login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/user/register" class="nav-link">Register</a>
                </li>
            }               
        </ul>
    </div>
</nav>
<body>
    <div class="container mt-3">
     @RenderBody()
    </div>
    @RenderSection("Script", required:false)
</body>
</html>