@model IEnumerable<AppRole>

<a asp-action="Create" class="btn btn-success">Create Role</a>
<hr>

<table class="table table-sm table-bordered">
        <tr>
            <th>Id</th>
            <th>Role Adı</th>
            <th>Kullanıcılar</th>
            <th style="width: 150px;">Setting</th>
        </tr>
        @if(Model.Count() == 0){
            <tr><td colspan="4" class="text-center">Role Yok</td></tr>
        }
        @foreach(var role in Model){
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <form method="post">
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
</table>